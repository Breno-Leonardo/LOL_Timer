<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageThumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/inicial_thumb"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <ImageView
        android:id="@+id/imageTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timer_sand_complete" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:alpha="0.7"
        android:fontFamily="@font/aleobold"
        android:gravity="center"
        android:text="@string/title_app"
        android:textColor="@color/black"
        android:textSize="60dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/aleobold"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="-6"
        android:shadowDy="6"
        android:shadowRadius="9"
        android:text="@string/title_app"
        android:textColor="@color/greenTime"
        android:textSize="60dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Shadow buttons-->


    <Button

        android:layout_width="173dp"
        android:layout_height="60dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="86dp"

        android:backgroundTint="@color/black"
        android:clickable="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimer" />

    <Button
        android:layout_width="174dp"
        android:layout_height="60dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="27dp"

        android:backgroundTint="@color/black"
        android:clickable="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStart" />

    <Button
        android:id="@+id/button"
        android:layout_width="173dp"
        android:layout_height="60dp"
        android:layout_marginLeft="3dp"

        android:layout_marginTop="27dp"
        android:backgroundTint="@color/black"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCommands" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="82dp"
        android:backgroundTint="@color/greenTime"
        android:drawableLeft="@drawable/timer_btn_icon"
        android:text="@string/start"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimer" />


    <Button
        android:id="@+id/btnCommands"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/greenTime"
        android:drawableLeft="@drawable/book_open_page_variant"
        android:text="@string/commands"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStart" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/greenTime"
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCommands" />

    <LinearLayout
        android:id="@+id/shadowLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:alpha="0.5"
        android:background="@color/black"
        android:translationZ="2dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:orientation="horizontal">
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardIdAndRegion"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/black"
        android:translationZ="3dp"
        app:cardCornerRadius="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageThumb">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/summonerName"
                android:textColor="@color/greenTime"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/editTextSummonerName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/putSummonerName"
                android:backgroundTint="@color/greenTime"
                android:textColor="@color/greenTime">

            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/region"
                android:layout_marginTop="10dp"
                android:textColor="@color/greenTime"
                android:textSize="15dp"
                android:textColorHighlight="@color/white"
                android:textStyle="bold">

            </TextView>

            <Spinner
                android:id="@+id/spinnerRegion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@android:drawable/btn_dropdown"
                android:popupBackground="@color/greenTime"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:theme="@style/spinnerTheme"
                android:backgroundTint="@color/greenTime"
                android:backgroundTintMode="multiply"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/btnStartInCard"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/greenTime"
                android:layout_marginTop="25dp"
                android:shadowColor="@color/white"
                android:shadowRadius="50"
                android:drawableLeft="@drawable/timer_btn_icon"
                android:text="@string/start"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"

                 />
            <TextView
                android:id="@+id/textErrorInCard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:text="@string/error"
                android:textColor="@color/greenTime"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>